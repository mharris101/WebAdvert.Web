@using WebAdvert.Web.Models.Account

@{
    ViewData["Title"] = "Signup";
}

@model SignupModel

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Signup">
            <h4>Create a New Account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="h5 text-black-50"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="Password" class="h5 text-black-50"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="h5 text-black-50">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger" />
            </div>

            <button type="submit" class="btn-primary">Submit</button>
        </form>
    </div>
</div>
